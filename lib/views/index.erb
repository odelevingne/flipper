<!DOCTYPE	html>
<html>
	<head>
		<title>Flipper!</title>
	</head>

	<header>
		<div id="sign-up-button">
			<form action="/users/new">
				<button type="submit">Sign Up</button>
			</form>
		</div>
	</header>

	<body>
		
		<div id="new-flip">
			<form action='/' method="POST">
				Flip: <input type="text" name="flip">
				<button type="submit">Flip!</button>
			</form>
		</div>

		<div id="flip-list">
			<% if @flips.any? %>
				<% @flips.each do |flip| %>
							<li><%= flip.content %><br/>
								<%= flip.created_at %></li>
					<% end %>
			<% else %>
					<h1>No-one's Flipped!</h1>
			<% end %>
		</div>

</body>
</html>